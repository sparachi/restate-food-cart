{
  "name": "rvajs-demo-restate-xstate-examples",
  "description": "Restate + XState examples for RVA.js",
  "license": "MIT",
  "author": "Saikarthik Parachi",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist && rm tsconfig.tsbuildinfo || true",
    "build": "tsc -b",
    "prebuild": "rm -rf dist",
    "lambda-build": "esbuild index.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outfile=dist/index.js",
    "postbuild": "cd dist && zip -r index.zip index.js*",
    "lint": "eslint",
    "foodCart": "tsx watch --include ./src ./src/foodCart.ts",
    "restaurant": "tsx watch --include ./src ./src/restaurant.ts",
    "dev": "tsx watch --include ./src ./src/foodCart.ts & tsx watch --include ./src ./src/restaurant.ts"
  },
  "dependencies": {
    "@restatedev/restate-sdk": "^1.8.3",
    "@restatedev/xstate": "^0.3.1",
    "xstate": "^5.20.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^24.3.0",
    "esbuild": "^0.25.9",
    "tsx": "^4.20.5"
  }
}
